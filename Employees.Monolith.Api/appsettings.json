{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "Tag": "local",
    "Files": [
      {
        "Name": "appsettings.Local.json",
        "Tag": "local"
      },
      {
        "Name": "appsettings.Development.json",
        "Tag": "dev"
      },
      {
        "Name": "appsettings.Production.json",
        "Tag": "master"
      }
    ]
  },
  "Title": "Monolith",
  "Authentications": {
    "Token": {
      "ExpiredAt": 7
    }
  },
  "Swagger": {
    "IsAuthentication": true,
    "XmlFile": "Employees.Monolith.Api.xml"
  }
}
